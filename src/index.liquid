---
layout: default.liquid
---

<section class="h-[82vh] flex flex-col bg-black/60 overflow-hidden z-10">
    <div class="gap-y-16 container relative flex flex-col items-end my-auto">
        <h1 class="leading-[.85] text-right text-display font-secondary">
            <span class="text-white">ONLINE RESULTAAT</span><br/>
            <span class="text-border text-border-white text-black">RESULTAAT</span>
        </h1>
        <div class="origin-bottom-right-left text-white-700 left-4 sm:text-xl md:text-2xl bottom-8 absolute flex items-center origin-top-left -rotate-90">
            <span>web</span>
            <div class="bg-yellow w-1 h-1 mx-4 rounded-full"></div>
            <span>app</span>
            <div class="bg-yellow w-1 h-1 mx-4 rounded-full"></div>
            <span>shop</span>
        </div>
        <div class="sm:flex-row sm:items-center gap-y-5 gap-x-9 relative flex flex-col items-end justify-center md:mr-[18%]" id="neptune">
            <div class="bg-gradient-radial from-blue/10 via-blue/0 to-blue/0 absolute w-[250%] h-[400%] right-[-60%] md:h-[800%]"></div>
            {% bookshop 'btn/primary' text: 'Lanceren' url: '#' big animate %}
            {% bookshop 'btn/secondary' text: 'Recente projecten' url: '#' big animate %}
        </div>
    </div>
</section>

<section class="pin relative">
    <div class="relative bg-yellow h-[30vh] w-full"></div>
    <div class="items-center justify-center z-auto absolute -left-[20%] -top-[50%] lg:-top-[65%] inline-flex w-[110vw] sm:w-[85vw] md:w-[60vw] canvas-container">
        <canvas class="neptune" id="canvas"></canvas>
        {% for i in (1..3) %}
            <div class="circle-{{ forloop.index }} absolute flex justify-center items-end aspect-1 border border-white-900 rounded-full -z-50 circle {% cycle 'h-[122%]', 'h-[154%]', 'h-[122%] border-none' %}">
                <div class="absolute bottom-0 w-6 h-6 translate-y-1/2 bg-black border-2 border-white rounded-full"></div>
            </div>
        {% endfor %}
    </div>
</section>


